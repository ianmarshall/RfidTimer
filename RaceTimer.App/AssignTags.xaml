<Window x:Class="RaceTimer.App.AssignTags"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RaceTimer.App"
        mc:Ignorable="d"
        Title="AssignTags" Height="300" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Orientation="Horizontal">
            <Label Content="Assign RFID Tags" Margin="5"></Label>
            <TextBox Name="tbBib" Width="50"></TextBox>
            <TextBlock Name="tbTagId" Margin="5"></TextBlock>
            <Button Name="btnAssign" Width="60" Margin="5" Content="Assign" Click="btnAssign_Click"></Button>

        </StackPanel>
        
    </Grid>
</Window>
